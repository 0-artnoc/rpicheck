<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.eidottermihi.rpicheck"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <!-- android:uiOptions="splitActionBarWhenNarrow" -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.eidottermihi.rpicheck.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.eidottermihi.rpicheck.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="de.eidottermihi.rpicheck.NewRaspiActivity"
            android:label="@string/title_activity_new_raspi"
            android:parentActivityName="de.eidottermihi.rpicheck.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.eidottermihi.rpicheck.MainActivity" />
        </activity>
        <activity
            android:name="de.eidottermihi.rpicheck.EditRaspiActivity"
            android:label="@string/activity_title_edit_raspi"
            android:parentActivityName="de.eidottermihi.rpicheck.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.eidottermihi.rpicheck.MainActivity" />
        </activity>
    </application>

</manifest>