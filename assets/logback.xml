<configuration>
	<property name="LOG_DIR" value="/sdcard/data/de.eidottermihi.rpicheck" />

	<!-- Create a logcat appender -->
	<appender name="logcat" class="ch.qos.logback.classic.android.LogcatAppender">
		<encoder>
			<pattern>%msg</pattern>
		</encoder>
	</appender>

	<!-- Create a file appender -->
	<appender name="infoLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_DIR}/rpicheck.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
		    <!-- daily rollover -->
		    <fileNamePattern>${LOG_DIR}/rpicheck.%d{yyyy-MM-dd}.log</fileNamePattern>
			<!-- 14 days history -->
			<maxHistory>14</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} %-5level %logger{24} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<logger name="net.schmizz" level="WARN">
	    <appender-ref ref="infoLog"/>
	</logger>
	<logger name="de.eidottermihi.rpicheck" level="INFO">
	    <appender-ref ref="infoLog"/>
	</logger>
	<logger name="de.eidottermihi.raspitools" level="INFO">
	    <appender-ref ref="infoLog"/>
	</logger>

	<root level="TRACE">
		<appender-ref ref="logcat" />
	</root>
</configuration>