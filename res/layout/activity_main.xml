<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:onClick="onCheck"
        android:text="@string/button_check" />

    <EditText
        android:id="@+id/cpuTempText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/cpuTempLabel"
        android:layout_toRightOf="@+id/cpuTempLabel"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/cpuFreqLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/cpuTempText"
        android:text="@string/cpu_freq"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/cpuFreqText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cpuFreqLabel"
        android:layout_alignBottom="@+id/cpuFreqLabel"
        android:layout_toRightOf="@+id/cpuTempLabel"
        android:ems="10"
        android:inputType="numberDecimal" />

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/cpuTempLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button1"
        android:text="@string/cpu_temp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
